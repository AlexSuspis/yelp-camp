<% layout('/layouts/boilerplate')%>

	<div class="container d-flex justify-content-center align-items-center mb-5">
		<div class="row">
			<div class="col-md-6 offset-md-3">
				<div class="card shadow">
					<img src="https://images.unsplash.com/photo-1615927998810-ca467ad48c5f?ixid=MnwxMjA3fDB8MHxzZWFyY2h8Mnx8d2VsY29tZSUyMG1hdHxlbnwwfHwwfHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=900&q=60"
						alt="" class="card-img-top">
					<h5 class="card-title m-3">Login</h5>
					<div class="card-body">
						<form action="/login" method="POST" class="needs-validation" novalidate>
							<div class="mb-3">
								<label class="form-label" for="username">Username:</label>
								<input class="form-control" type="text" id="username" name='username' required
									autofocus>
							</div>
							<div class="mb-3">
								<label class="form-label" for="password">Password:</label>
								<input class="form-control" type="password" id="password" name='password' required>
							</div>
							<div class="d-grid mx-auto">
								<button class="btn btn-success" type="button">Login</button>
							</div>
					</div>
					</form>
				</div>
			</div>
		</div>
	</div>