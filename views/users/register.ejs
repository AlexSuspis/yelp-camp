<% layout('/layouts/boilerplate')%>

	<div class="container d-flex justify-content-center align-items-center mb-5">
		<div class="row">
			<div class="col-md-6 offset-md-3">
				<div class="card shadow">
					<img src="https://images.unsplash.com/photo-1594323713852-9626155bfd37?ixid=MnwxMjA3fDB8MHxzZWFyY2h8OHx8d2VsY29tZXxlbnwwfHwwfHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=900&q=60"
						alt="" class="card-img-top">
					<h5 class="card-title m-3">Register</h5>
					<div class="card-body">
						<form action="/register" method="POST" class="needs-validation" novalidate>
							<div class="mb-3">
								<label class="form-label" for="username">Username:</label>
								<input class="form-control" type="text" id="username" name='username' required
									autofocus>
							</div>
							<div class="mb-3">
								<label class="form-label" for="email">Email:</label>
								<input class="form-control" type="email" id="email" name='email' required>
							</div>
							<div class="mb-3">
								<label class="form-label" for="password">Password:</label>
								<input class="form-control" type="password" id="password" name='password' required>
							</div>
							<button class="btn btn-success">Register</button>
						</form>
					</div>
				</div>
			</div>
		</div>